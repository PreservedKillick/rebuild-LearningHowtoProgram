<h1>Table of contents</h1>

<% if @sections.count == 0 %>
  <p>No sections added in here yet!</p>
<% else %>
  <ul>
    <% @sections.each do |section| %>
      <li><%= section.title %></li>
          <ul>
            <% section.lessons.each do |lesson| %>
              <li class="hidden-lesson"> <%= lesson.name %> </li>
            <% end %>
          </ul>
    <% end %>
  </ul>
<% end %>
